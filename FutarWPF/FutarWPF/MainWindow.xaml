<Window x:Class="FutarWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FutarWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FFAFE2E1">
        <Grid.ColumnDefinitions>
            
            <ColumnDefinition Width="1*"></ColumnDefinition>
            
            <ColumnDefinition Width="4*"></ColumnDefinition>
            
        </Grid.ColumnDefinitions>
        <StackPanel Background="#FF3A617F">
            <Button Content="Rendelés" x:Name="btnRendeles"/>
            <Button Content="Új étel" x:Name="btnUjetel" Click="btnUjetel_Click"/>
            <Button Content="Új futár" x:Name="btnUjfutar"/>
            <Button Content="Étel lista" x:Name="btnEtellista"/>
            <Button Content="Futár lsita" x:Name="btnFutarlista"/>
        </StackPanel>

    </Grid>
</Window>
